<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#FBE9E7"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="126dp"
                android:layout_height="126dp"
                android:layout_margin="10dp"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:layout_margin="10dp"
                android:id="@+id/tv_1"
                android:layout_below="@id/profile_image"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textSize="21sp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_margin="10dp"
                android:id="@+id/tv_2"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/tv_1"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diwali"/>



            <TextView
                android:layout_margin="10dp"
                android:id="@+id/tv_3"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/tv_2"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diwali"/>



            <TextView
                android:layout_margin="10dp"
                android:id="@+id/tv_4"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/tv_3"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-mail"/>



            <TextView
                android:layout_margin="10dp"
                android:id="@+id/tv_5"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/tv_4"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"/>

            <TextView
                android:layout_margin="10dp"
                android:id="@+id/tv_6"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/tv_5"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile-no"/>

            <TextView
                android:layout_margin="10dp"
                android:id="@+id/tv_7"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/tv_6"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"/>

            <TextView
                android:layout_margin="10dp"
                android:id="@+id/tv_8"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/tv_7"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile-no"/>



            <TextView
                android:layout_margin="10dp"
                android:id="@+id/tv_ans1"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_1"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diwali"/>

            <View
                android:id="@+id/v1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f2f2f2"
                android:layout_below="@id/tv_ans1"
               />

            <TextView
                android:layout_margin="10dp"
                android:id="@+id/tv_ans2"
                android:layout_alignParentRight="true"
                android:layout_below="@id/v1"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diwali"/>

            <View
                android:id="@+id/v2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f2f2f2"
                android:layout_below="@id/tv_ans2"
                />

            <TextView
                android:layout_margin="10dp"
                android:id="@+id/tv_ans3"
                android:layout_alignParentRight="true"
                android:layout_below="@id/v2"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-mail"/>

            <View
                android:id="@+id/v3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f2f2f2"
                android:layout_below="@id/tv_ans3"
                />

            <TextView
                android:layout_margin="10dp"
                android:id="@+id/tv_ans4"
                android:layout_alignParentRight="true"
                android:layout_below="@id/v3"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"/>

            <View
                android:id="@+id/v4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f2f2f2"
                android:layout_below="@id/tv_ans4"
                />

            <TextView
                android:layout_margin="10dp"
                android:id="@+id/tv_ans5"
                android:layout_alignParentRight="true"
                android:layout_below="@id/v4"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile-no"/>

            <View
                android:id="@+id/v5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f2f2f2"
                android:layout_below="@id/tv_ans5"
                />

            <TextView
                android:layout_margin="10dp"
                android:id="@+id/tv_ans6"
                android:layout_alignParentRight="true"
                android:layout_below="@id/v5"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"/>

            <View
                android:id="@+id/v6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f2f2f2"
                android:layout_below="@id/tv_ans6"
                />

            <TextView
                android:layout_margin="10dp"
                android:id="@+id/tv_ans7"
                android:layout_alignParentRight="true"
                android:layout_below="@id/v6"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile-no"/>

            <Button
                android:id="@+id/btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:layout_below="@id/tv_ans7"
                android:gravity="center"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>