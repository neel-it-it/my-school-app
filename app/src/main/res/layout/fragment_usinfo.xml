<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#8C9EFF"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".UsinfoFragment">

    <!-- TODO: Update blank fragment layout -->
   <androidx.cardview.widget.CardView
       android:layout_marginTop="10dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:cardCornerRadius="15dp"
       app:cardBackgroundColor="@color/white"
       app:cardElevation="10dp">



       <LinearLayout
           android:layout_margin="10dp"
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="Enter your name"
           android:padding="10dp"
           android:inputType="text"
           android:id="@+id/et_name"
           android:maxLength="10"
           android:background="@drawable/input_type"
           android:layout_margin="5dp"/>




           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="5dp"
               android:id="@+id/et_email"
               android:background="@drawable/input_type"
               android:hint=" Email-id"
               android:inputType="textEmailAddress"
               android:maxLength="15"
               android:padding="10dp" />


           <EditText
               android:id="@+id/et_address"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="5dp"
               android:background="@drawable/input_type"
               android:hint="Enter your Address"
               android:inputType="text"
               android:maxLength="30"
               android:padding="10dp" />

           <EditText
               android:id="@+id/et_father"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="5dp"
               android:background="@drawable/input_type"
               android:hint="Enter your Father name"
               android:inputType="text"
               android:maxLength="10"
               android:padding="10dp" />

           <EditText
               android:id="@+id/et_mother"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="5dp"
               android:background="@drawable/input_type"
               android:hint="Enter your mother name"
               android:inputType="text"
               android:maxLength="10"
               android:padding="10dp" />

           <EditText
               android:id="@+id/et_cnum"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="5dp"
               android:background="@drawable/input_type"
               android:hint="Enter your mobile number"
               android:inputType="number"
               android:maxLength="10"
               android:padding="10dp" />

           <Button
               android:id="@+id/btn_update"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="UPDATE"
               android:layout_margin="5dp"
               android:padding="10dp"
               android:layout_gravity="center"/>

       </LinearLayout>





   </androidx.cardview.widget.CardView>

</LinearLayout>