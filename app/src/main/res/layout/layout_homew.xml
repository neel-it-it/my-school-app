<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/pastal_purple1"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        android:elevation="10dp"
        android:id="@+id/download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_toRightOf="@id/imv_res"
                android:id="@+id/tv_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:text="Sub name:"/>

            <TextView
                android:layout_toRightOf="@id/imv_res"
                android:layout_below="@id/tv_subname"
                android:id="@+id/tv_stand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textSize="22sp"/>

            <TextView
                android:layout_toRightOf="@id/tv_stand"
                android:layout_below="@id/tv_subject"
                android:id="@+id/tv_standname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textSize="22sp"/>

    <TextView
        android:layout_toRightOf="@id/tv_subject"
        android:id="@+id/tv_subname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:textSize="22sp"/>


    <ImageView
        android:id="@+id/imv_res"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_result"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>

